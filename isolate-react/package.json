{
  "name": "isolate-react",
  "version": "2.4.2",
  "repository": "https://github.com/davidmfoley/isolate-react",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "davidmfoley@gmail.com",
  "license": "MIT",
  "private": false,
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "yarn clean && yarn build:tsc",
    "build:tsc": "tsc -p tsconfig.build.json",
    "clean": "rm -rf ./lib/",
    "test": "TS_NODE_TRANSPILE_ONLY=true mocha",
    "test:watch": "nodemon -q -e ts,tsx --exec \"yarn test\" --watch src --watch test",
    "prettier": "prettier -c '{src,test}/**/*.{ts,tsx}'",
    "fix:prettier": "prettier --write '{src,test}/**/*.{ts,tsx}'",
    "cover": "COVERAGE=1 nyc mocha && open coverage/index.html",
    "ci": "yarn build:tsc && yarn test && yarn prettier"
  },
  "devDependencies": {
    "@types/mocha": "^8.0.3",
    "@types/node": "^18.7.15",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.6",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^5.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.0.3"
  },
  "mocha": {
    "extension": [
      "ts",
      "tsx"
    ],
    "spec": [
      "./**/*.test.ts*"
    ],
    "require": [
      "ts-node/register"
    ],
    "watch-files": [
      "./src/**/*",
      "./test/**/*"
    ],
    "reporter": "dot",
    "recursive": true
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
